@using clbModels.Bitacora;
@model List<Scrum_Actividades>

<table class="table table-striped table-bordered table-hover table-sm isDataTable isExportTable withOutAutoFit">
    <thead>
        <tr class="bg-primary text-white">
            <td align="center">
                @Html.LabelFor(model => model.First().Cod_Actividad, htmlAttributes: new { @class = "control-label" })
            </td>
            <td align="center">
                @Html.LabelFor(model => model.First().Cod_Proyecto, htmlAttributes: new { @class = "control-label" })
            </td>
            <td align="center">
                @Html.LabelFor(model => model.First().Descripcion, htmlAttributes: new { @class = "control-label" })
            </td>
            <td align="center">
                @Html.LabelFor(model => model.First().Anotaciones, htmlAttributes: new { @class = "control-label" })
            </td>
            <td align="center">
                @Html.LabelFor(model => model.First().Fecha_Inicio, htmlAttributes: new { @class = "control-label" })
            </td>
            <td align="center">
                @Html.LabelFor(model => model.First().Fecha_Fin, htmlAttributes: new { @class = "control-label" })
            </td>



        </tr>
    </thead>
    <tbody>
        @if (Model != null)
            @foreach (var item in Model)
            {
                <tr>
                    <td align="center">
                        @Html.DisplayFor(modelItem => item.Cod_Actividad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cod_Proyecto)
                    </td>
                    <td align="center">
                        @item.Descripcion
                    </td>
                    <td>
                        @item.Anotaciones
                    </td>
                    <td>
                        @item.Fecha_Inicio
                    </td>
                    <td>
                        @item.Fecha_Fin
                    </td>
                </tr>
            }
    </tbody>
</table>
