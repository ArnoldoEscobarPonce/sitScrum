@using System.Diagnostics;
@using Newtonsoft.Json;
@using clbModels.Bitacora;
@model List<Scrum_Tareas>

<div class="table-responsive">
    <table id="tablaDetalle" class="table table-striped table-bordered table-hover table-sm isDataTable isExportTable withOutAutoFit">
        <thead>
            <tr class="bg-primary text-white">
                <td>
                    Acciones
                </td>
                <td>
                    Actividades
                </td>
                <td align="center">
                    @Html.LabelFor(model => model.First().Cod_Tarea, htmlAttributes: new { @class = "control-label" })
                </td>
                <td align="center">
                    @Html.LabelFor(model => model.First().Cod_Actividad, htmlAttributes: new { @class = "control-label" })
                </td>
                <td align="center">
                    @Html.LabelFor(model => model.First().Descripcion, htmlAttributes: new { @class = "control-label" })
                </td>
                <td align="center">
                    @Html.LabelFor(model => model.First().Anotaciones, htmlAttributes: new { @class = "control-label" })
                </td>
                <td align="center">
                    @Html.LabelFor(model => model.First().Cod_Empleado_Responsable, htmlAttributes: new { @class = "control-label" })
                </td>
                <td align="center">
                    @Html.LabelFor(model => model.First().Fecha_Inicio, htmlAttributes: new { @class = "control-label" })
                </td>
                <td align="center">
                    @Html.LabelFor(model => model.First().Fecha_Fin_Estimada, htmlAttributes: new { @class = "control-label" })
                </td>
                <td align="center">
                    @Html.LabelFor(model => model.First().Fecha_Fin_Real, htmlAttributes: new { @class = "control-label" })
                </td>

            </tr>
        </thead>
        <tbody>
            @if (Model != null)
                @foreach (var item in Model)
                {
                    <tr id="tr_@(@item.Cod_Tarea)">
                        @await Html.PartialAsync("Row", item)
                    </tr>
                }
        </tbody>
    </table>

    <button id="hiddenEliminarRegistro" onclick="hidden_btnClick_EliminarRegistro();" style="visibility:hidden"></button>
</div>